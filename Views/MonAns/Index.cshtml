@model X.PagedList.IPagedList<SmartCookFinal.Models.MonAn>
@using X.PagedList.Mvc.Core
@using X.PagedList


@{
    ViewData["Title"] = "Index";
}

<div class="page-content bg-white">
    <!-- inner page banner -->
    <div class="page-banner ovbl-dark" style="background-image: url('@Url.Content("~/assets/images/smartcook/background.png")');" ;">
        <div class="container">
            <div class="page-banner-entry">
                <h1 class="text-white">Món Ăn</h1>
            </div>
        </div>
    </div>
    <!-- Breadcrumb row -->
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="#">Home</a></li>
                <li>Our Courses</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb row END -->
    <!-- inner page banner END -->
    <div class="content-block">
        <!-- About Us -->
        <div class="section-area section-sp1">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-4 col-sm-12 m-b30">
                        <div class="widget courses-search-bx placeani">
                            <form asp-action="SearchByName" method="get">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label>Search </label>
                                        <input name="name" type="text" value="@ViewBag.SearchTerm" required class="form-control" />
                                        <button type="submit" class="btn btn-primary">Tìm</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="widget widget_archive">
                            <h5 class="widget-title style-1">All Courses</h5>
                            <ul>
                                <li class="@(ViewBag.LoaiBuaAn == null ? "active" : "")"><a href="@Url.Action("Index", "MonAns")">Tất Cả</a></li>
                                <li class="@(ViewBag.LoaiBuaAn == "Sáng" ? "active" : "")"><a href="@Url.Action("FilterByBuaAn", "MonAns", new { loaiBuaAn = "Sáng" })">Buổi Sáng</a></li>
                                <li class="@(ViewBag.LoaiBuaAn == "Trưa" ? "active" : "")"><a href="@Url.Action("FilterByBuaAn", "MonAns", new { loaiBuaAn = "Trưa" })">Buổi Trưa</a></li>
                                <li class="@(ViewBag.LoaiBuaAn == "Tối" ? "active" : "")"><a href="@Url.Action("FilterByBuaAn", "MonAns", new { loaiBuaAn = "Tối" })">Buổi Tối</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-8 col-sm-12">
                        @if (ViewBag.LoaiBuaAn != null)
                        {
                            <h3>Món ăn cho: @ViewBag.LoaiBuaAn</h3>
                        }
                        else if (ViewBag.SearchTerm != null)
                        {
                            <h3>Kết quả tìm kiếm: "@ViewBag.SearchTerm"</h3>
                        }
                        else
                        {
                            <h3>Tất cả món ăn</h3>
                        }

                        <br />
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-lg-4 col-sm-6 m-b30">
                                    <div class="cours-bx">
                                        <div class="action-box">
                                            <img src="@item.UrlHinhAnh" alt="@item.TenMon"
                                                 style="width:200px; height:150px; object-fit:cover; border-radius:8px;" />

                                            <!-- Nút mở modal -->
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalMonAn_@item.Id">
                                                Read More
                                            </button>
                                        </div>
                                        <div class="info-bx text-center">
                                            <h5><a href="#">@item.TenMon</a></h5>
                                            <span>
                                                @(
                                                    item.MoTa.Length > 20
                                                    ? item.MoTa.Substring(0, 20) + "..."
                                                    : item.MoTa
                                                    )
                                            </span>
                                        </div>
                                        <div class="cours-more-info">
                                            <div class="review">
                                                <span>3 Review</span>
                                                <ul class="cours-star">
                                                    <li class="active"><i class="fa fa-star"></i></li>
                                                    <li class="active"><i class="fa fa-star"></i></li>
                                                    <li class="active"><i class="fa fa-star"></i></li>
                                                    <li><i class="fa fa-star"></i></li>
                                                    <li><i class="fa fa-star"></i></li>
                                                </ul>
                                            </div>
                                            <div class="price">
                                                <h6>@item.LuongCalo calo</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal -->
                                <div class="modal fade" id="modalMonAn_@item.Id" tabindex="-1" aria-labelledby="modalLabel_@item.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-lg modal-dialog-centered">
                                        <div class="modal-content shadow">
                                            <div class="modal-header bg-success text-white">
                                                <h5 class="modal-title" id="modalLabel_@item.Id">@item.TenMon</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <img src="@item.UrlHinhAnh" alt="@item.TenMon"
                                                     style="width:100%; height:300px; object-fit:cover; border-radius:8px;" />
                                                <hr />
                                                <p><strong>Mô tả:</strong> @item.MoTa</p>
                                                <p><strong>Loại bữa ăn:</strong> @item.LoaiBuaAn</p>
                                                <p><strong>Thời gian nấu:</strong> @item.ThoiGianNau phút</p>
                                                <p><strong>Lượng calo:</strong> @item.LuongCalo</p>
                                                <p><strong>Carbs:</strong> @item.Carbs</p>
                                                <p><strong>Protein:</strong> @item.Protein</p>
                                                <p><strong>Fat:</strong> @item.Fat</p>
                                                <p><strong>Chi phí ước tính:</strong> @item.ChiPhiUocTinh VND</p>
                                                <p><strong>Nguyên liệu chính:</strong> @item.NguyenLieuChinh</p>
                                                <p><strong>Cách nấu:</strong><br /> @item.CachNau</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="col-lg-12 m-b20">
                            <div class="pagination-bx rounded-sm gray clearfix">
                                @{
                                    string currentAction = (string)(ViewBag.CurrentAction ?? "Index");
                                    string searchTerm = (string)(ViewBag.SearchTerm ?? "");
                                    string loaiBuaAn = (string)(ViewBag.LoaiBuaAn ?? "");
                                }

                                @Html.PagedListPager(Model, page => Url.Action(currentAction, "MonAns", new { page, name = searchTerm, loaiBuaAn = loaiBuaAn }))


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
