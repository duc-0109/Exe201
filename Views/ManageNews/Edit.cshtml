@model SmartCookFinal.Models.News
@{
    ViewData["Title"] = "Edit News";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit News</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 750px;
            margin: 50px auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 35px 40px;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            margin-bottom: 6px;
            display: block;
        }

        .form-control,
        .form-control-file {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #007bff;
                outline: none;
            }

        img {
            display: block;
            margin-top: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
            max-width: 100%;
            height: auto;
        }

        .btn {
            padding: 10px 20px;
            font-weight: 600;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            margin-top: 10px;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            border: none;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            margin-left: 10px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        .text-danger {
            font-size: 0.9em;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Edit News</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="NewsId" />

            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Upload New Image (optional):</label>
                <input type="file" name="imageFile" class="form-control-file" />
                @if (!string.IsNullOrEmpty(Model.UrlImage))
                {
                    <p>Current image:</p>
                    <img src="@Model.UrlImage" alt="Current Image" style="max-height: 150px;" />
                }
            </div>

            <div class="form-group">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Detail"></label>
                <textarea asp-for="Detail" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="UserId" />

            <button type="submit" class="btn btn-success">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
