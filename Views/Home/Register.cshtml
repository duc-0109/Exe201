@model SmartCookFinal.Models.NguoiDung

@{
    ViewData["Title"] = "Đăng ký";
}

<h2>Đăng ký</h2>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="TenNguoiDung">Tên người dùng</label>
        <input name="TenNguoiDung" class="form-control" required
               oninvalid="this.setCustomValidity('Vui lòng nhập tên người dùng')"
               oninput="setCustomValidity('')" />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input name="Email" class="form-control" type="email" required
               oninvalid="this.setCustomValidity('Vui lòng nhập email hợp lệ')"
               oninput="setCustomValidity('')" />
    </div>
    <div class="form-group">
        <label for="Password">Mật khẩu</label>
        <input name="Password" class="form-control" type="password" required
               oninvalid="this.setCustomValidity('Vui lòng nhập mật khẩu')"
               oninput="setCustomValidity('')" />
    </div>
    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>


<div>
    <a asp-action="Login">Đã có tài khoản? Đăng nhập</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
