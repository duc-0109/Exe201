@{
    Layout = null;
    var sent = Context.Request.Query["sent"].ToString();
    var error = Context.Request.Query["error"].ToString();
    string message = "";
    string color = "";

    if (sent == "true")
    {
        message = "Email đặt lại mật khẩu đã được gửi. Vui lòng kiểm tra hộp thư!";
        color = "green";
    }
    else if (error == "empty")
    {
        message = "Vui lòng nhập email.";
        color = "red";
    }
    else if (error == "notfound")
    {
        message = "Email không tồn tại trong hệ thống.";
        color = "red";
    }
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quên mật khẩu</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            margin: 0;
            background: linear-gradient(135deg, #00c6ff, #0072ff);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .forgot-container {
            background: white;
            padding: 30px 40px;
            border-radius: 14px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }

            .forgot-container h2 {
                margin-bottom: 20px;
                color: #333;
            }

        #message {
            margin-bottom: 16px;
            font-weight: bold;
            min-height: 24px;
        }

        .input-group {
            margin-bottom: 18px;
            text-align: left;
        }

            .input-group label {
                display: block;
                margin-bottom: 6px;
                font-weight: bold;
                color: #444;
            }

            .input-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 8px;
            }

        .reset-btn {
            width: 100%;
            padding: 12px;
            background-color: #0072ff;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .reset-btn:hover {
                background-color: #005edb;
            }

        .options {
            margin-top: 16px;
            font-size: 14px;
        }

            .options a {
                color: #0072ff;
                text-decoration: none;
            }

                .options a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="forgot-container">
        <h2>Quên mật khẩu</h2>

        <div id="message" style="color:@color">
            @message
        </div>

        <p>Nhập email để khôi phục mật khẩu của bạn.</p>

        <form method="post" asp-action="ForgotPassword">
            <div class="input-group">
                <label for="email">Email của bạn</label>
                <input type="email" id="email" name="email" placeholder="example@gmail.com" required />
            </div>

            <button class="reset-btn" type="submit">Gửi liên kết khôi phục</button>
        </form>

        <div class="options">
            <p><a a asp-action="Login">← Quay lại trang đăng nhập</a></p>
        </div>
    </div>
</body>

</html>
