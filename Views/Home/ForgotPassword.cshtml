@{
    Layout = null;
    var sent = Context.Request.Query["sent"].ToString();
    var error = Context.Request.Query["error"].ToString();
    string message = "";
    string color = "";

    if (sent == "true")
    {
        message = "Email đặt lại mật khẩu đã được gửi. Vui lòng kiểm tra hộp thư!";
        color = "green";
    }
    else if (error == "empty")
    {
        message = "Vui lòng nhập email.";
        color = "red";
    }
    else if (error == "notfound")
    {
        message = "Email không tồn tại trong hệ thống.";
        color = "red";
    }
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quên mật khẩu</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <style>
        * {
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            margin: 0;
            background: linear-gradient(135deg, #667eea, #764ba2);
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            animation: fadeInBody 1.2s ease-in-out;
        }

        @@keyframes fadeInBody {
            from

        {
            opacity: 0;
            transform: scale(1.05);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }

        }

        .forgot-container {
            background: white;
            padding: 40px 30px;
            border-radius: 16px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
            width: 100%;
            max-width: 420px;
            text-align: center;
            position: relative;
            animation: slideIn 0.7s ease;
            transition: transform 0.3s;
        }

            .forgot-container:hover {
                transform: translateY(-4px);
            }

        @@keyframes slideIn {
            from

        {
            transform: translateY(40px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        .forgot-container h2 {
            color: #333;
            margin-bottom: 20px;
        }

        #message {
            font-weight: bold;
            margin-bottom: 18px;
            min-height: 24px;
            color: @color;
        }

        .input-group {
            position: relative;
            margin-bottom: 24px;
            text-align: left;
        }

            .input-group input {
                width: 100%;
                padding: 14px 12px;
                border-radius: 10px;
                border: 1px solid #ccc;
                outline: none;
                transition: all 0.3s ease;
            }

                .input-group input:focus {
                    border-color: #667eea;
                    box-shadow: 0 0 10px rgba(102, 126, 234, 0.4);
                }

            .input-group label {
                position: absolute;
                top: 14px;
                left: 12px;
                color: #777;
                font-weight: bold;
                background: white;
                padding: 0 5px;
                transition: 0.3s ease;
                pointer-events: none;
            }

            .input-group input:focus + label,
            .input-group input:not(:placeholder-shown) + label {
                top: -10px;
                left: 10px;
                font-size: 12px;
                color: #667eea;
            }

        .reset-btn {
            position: relative;
            overflow: hidden;
            background-color: #667eea;
            color: white;
            font-size: 16px;
            font-weight: bold;
            border: none;
            border-radius: 10px;
            padding: 12px;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .reset-btn:hover {
                background-color: #5a67d8;
            }

            .reset-btn:active::after {
                content: "";
                position: absolute;
                top: 50%;
                left: 50%;
                width: 300%;
                height: 300%;
                background: rgba(255, 255, 255, 0.3);
                transform: translate(-50%, -50%) scale(0);
                border-radius: 50%;
                animation: ripple 0.6s ease-out;
            }

        @@keyframes ripple {
            to

        {
            transform: translate(-50%, -50%) scale(1);
            opacity: 0;
        }

        }

        .options {
            margin-top: 20px;
            font-size: 14px;
        }

            .options a {
                color: #667eea;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .options a:hover {
                    color: #5a67d8;
                    text-decoration: underline;
                }

        @@media (max-width: 480px) {
            .forgot-container

        {
            padding: 30px 20px;
            border-radius: 12px;
        }

        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <h2>Quên mật khẩu</h2>
        <div id="message">@message</div>

        <p>Nhập email để khôi phục mật khẩu của bạn.</p>

        <form method="post" asp-action="ForgotPassword">
            <div class="input-group">
                <input type="email" id="email" name="email" placeholder=" " required />
                <label for="email">Email của bạn</label>
            </div>

            <button class="reset-btn" type="submit">Gửi liên kết khôi phục</button>
        </form>

        <div class="options">
            <p><a asp-action="Login">← Quay lại trang đăng nhập</a></p>
        </div>
    </div>
</body>
</html>
