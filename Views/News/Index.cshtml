@model IEnumerable<SmartCookFinal.Models.News>
@{
    ViewData["Title"] = "Tin tức";
    var categoryList = ViewBag.CategoryList as List<SmartCookFinal.Models.Category> ?? new List<SmartCookFinal.Models.Category>();
}

<!-- ================= CUSTOM CSS CHO TRANG TIN TỨC ================= -->
<style>
    .page-content {
        background-color: #F0F9F0;
    }

    .page-banner.ovbl-dark,
    .page-banner {
        background: linear-gradient(135deg, rgba(85, 139, 47, 0.85), rgba(27, 94, 32, 0.9)), url('~/upload/green.jpg') center/cover;
        padding: 100px 0;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .banner-title {
        font-size: 3.5rem;
        font-weight: 800;
        color: white;
        text-shadow: 1px 1px 10px rgba(0, 0, 0, 0.2);
    }

    .breadcrumb-row {
        background: #C8E6C9;
        padding: 1rem 0;
        border-bottom: 1px solid #A5D6A7;
    }

    .breadcrumb-list {
        list-style: none;
        display: flex;
        gap: 0.5rem;
        padding: 0;
        margin: 0;
    }

    .breadcrumb-link {
        color: #1B5E20;
        text-decoration: none;
        font-weight: 600;
    }

        .breadcrumb-link:hover {
            color: #4CAF50;
        }

    .breadcrumb-list .active {
        color: #2E7D32;
    }

    .breadcrumb-list li:not(.active)::after {
        content: '›';
        margin-left: 0.5rem;
        font-weight: bold;
        color: #2E7D32;
    }

    .search-bx {
        max-width: 700px;
        margin: 0 auto;
    }

    .search-form .form-control {
        border-radius: 50px 0 0 50px;
        border: 1px solid #C8E6C9;
        padding: 12px 20px;
    }

        .search-form .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.2);
        }

    .search-form .btn {
        border-radius: 0 50px 50px 0;
        background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
        color: white;
        border: none;
    }

        .search-form .btn:hover {
            background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
        }

    .blog-post {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.07);
        transition: all 0.4s ease;
    }

        .blog-post:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
        }

    .ttr-post-media {
        position: relative;
        overflow: hidden;
    }

    .news-image {
        width: 100%;
        transition: transform 0.4s ease;
    }

    .blog-post:hover .news-image {
        transform: scale(1.05);
    }

    .ttr-post-media::after {
        content: "Xem chi tiết";
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        background: rgba(46, 125, 50, 0.7);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }

    .blog-post:hover .ttr-post-media::after {
        opacity: 1;
    }

    .media-post i {
        color: #66BB6A;
    }

    .post-title a {
        color: #1B5E20;
        text-decoration: none;
    }

        .post-title a:hover {
            color: #4CAF50;
        }

    .read-more-btn {
        font-weight: 600;
        border-color: #66BB6A;
        color: #388E3C;
    }

        .read-more-btn:hover {
            background-color: #388E3C;
            color: white;
        }

    .pagination .page-link {
        color: #388E3C;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-color: #C8E6C9;
    }

    .pagination .page-item.active .page-link {
        background-color: #4CAF50;
        color: white;
    }

    .pagination .page-item:not(.active) .page-link:hover {
        background-color: #E8F5E9;
    }
</style>

<!-- ================= CONTENT ================= -->
<div class="page-content">
    <div class="page-banner">
        <h1 class="banner-title">Tin Tức</h1>
    </div>

    <div class="breadcrumb-row">
        <div class="container">
            <ul class="breadcrumb-list">
                <li><a href="@Url.Action("Index", "Home")" class="breadcrumb-link">Trang chủ</a></li>
                <li class="active">Tin tức</li>
            </ul>
        </div>
    </div>

    <div class="content-block py-5">
        <div class="container">
            <!-- ===== TÌM KIẾM VÀ LỌC DANH MỤC ===== -->
            <div class="search-bx style-1 mb-5">
                <form method="get" action="@Url.Action("Index", "News")" class="search-form d-flex">
                    <input type="hidden" name="categoryId" value="@ViewBag.SelectedCategoryId" />
                    <input type="text" name="searchText" class="form-control" placeholder="Nhập từ khóa tin tức..." value="@ViewBag.SearchText" />
                    <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                </form>

                <div class="d-flex justify-content-center flex-wrap gap-2 mt-3">
                    <a href="@Url.Action("Index", new { searchText = ViewBag.SearchText })"
                       class="btn btn-sm @(ViewBag.SelectedCategoryId == null ? "btn-success" : "btn-outline-success")">Tất cả</a>
                    @foreach (var category in ViewBag.CategoryList as List<Category>)

                    {
                        <a href="@Url.Action("Index", new { categoryId = category.CategoryId, searchText = ViewBag.SearchText })"
                           class="btn btn-sm @(ViewBag.SelectedCategoryId != null && ViewBag.SelectedCategoryId.Equals(category.CategoryId) ? "btn-success" : "btn-outline-success")">@category.Name</a>
                    }
                </div>
            </div>

            <!-- ===== DANH SÁCH TIN TỨC ===== -->
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-6 mb-4">
                            <div class="blog-post">
                                <div class="ttr-post-media">
                                    <a asp-controller="News" asp-action="Details" asp-route-id="@item.NewsId">
                                        <img src="@item.UrlImage" alt="@item.Title" class="news-image" />
                                    </a>
                                </div>
                                <div class="ttr-post-info p-4">
                                    <ul class="media-post list-inline small text-muted mb-2">
                                        <li class="list-inline-item"><i class="fa fa-calendar"></i> @item.CreatedAt.ToString("dd/MM/yyyy")</li>
                                        <li class="list-inline-item ml-3"><i class="fa fa-user"></i> @(item.User?.TenNguoiDung ?? "N/A")</li>
                                    </ul>
                                    <h5 class="post-title mb-3">
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@item.NewsId">@item.Title</a>
                                    </h5>
                                    <p class="text-secondary">
                                        @(item.Content != null && item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mt-4">
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-outline-primary btn-sm read-more-btn">ĐỌC THÊM</a>
                                        <span class="small text-muted"><i class="fa fa-eye"></i> @item.ViewCount lượt xem</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p>Không tìm thấy tin tức nào phù hợp.</p>
                    </div>
                }
            </div>

            <!-- ===== PHÂN TRANG ===== -->
            @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage != null && (int)ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = (int)ViewBag.CurrentPage - 1, searchText = ViewBag.SearchText, categoryId = ViewBag.SelectedCategoryId })">&laquo;</a>
                            </li>
                        }
                        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage != null && i == (int)ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, searchText = ViewBag.SearchText, categoryId = ViewBag.SelectedCategoryId })">@i</a>
                            </li>
                        }
                        @if (ViewBag.CurrentPage != null && ViewBag.TotalPages != null && (int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = (int)ViewBag.CurrentPage + 1, searchText = ViewBag.SearchText, categoryId = ViewBag.SelectedCategoryId })">&raquo;</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>