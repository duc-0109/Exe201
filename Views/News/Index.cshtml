@model IEnumerable<SmartCookFinal.Models.News>

@{
    ViewData["Title"] = "Tin tức";
}

<style>
    /*
            =========================================================================================
            STYLE V.4 - TÔNG MÀU XANH LÁ - ÁP DỤNG CHO TRANG NEWS LIST
            =========================================================================================
        */

    /* Nền chung */
    .page-content {
        background-color: #F0F9F0;
    }

    /* Banner */
    .page-banner.ovbl-dark {
        background: linear-gradient(135deg, rgba(85, 139, 47, 0.85), rgba(27, 94, 32, 0.9));
        padding: 100px 0;
    }

    .banner-title {
        font-size: 3.5rem;
        font-weight: 800;
        text-shadow: 1px 1px 10px rgba(0,0,0,0.2);
    }

    /* Breadcrumb */
    .breadcrumb-row {
        background: #C8E6C9;
        padding: 1rem 0;
        border-bottom: 1px solid #A5D6A7;
    }

    .breadcrumb-list {
        padding: 0;
        margin: 0;
        list-style: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .breadcrumb-link {
        color: #1B5E20;
        text-decoration: none;
        font-weight: 600;
    }

        .breadcrumb-link:hover {
            color: #4CAF50;
        }

    .breadcrumb-list .active {
        color: #2E7D32;
    }

    .breadcrumb-list li:not(.active)::after {
        content: '›';
        margin-left: 0.5rem;
        font-weight: bold;
        color: #2E7D32;
    }

    /* Search Box */
    .search-bx {
        max-width: 700px;
        margin: 0 auto;
    }

    .search-form .form-control {
        border-radius: 50px 0 0 50px;
        border: 1px solid #C8E6C9;
        padding: 12px 20px;
    }

        .search-form .form-control:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.2);
        }

    .search-form .btn {
        border-radius: 0 50px 50px 0;
        background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
        border: none;
        color: white;
    }

        .search-form .btn:hover {
            background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
        }

    /* News Card */
    .blog-post {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.07);
        transition: all 0.4s ease;
    }

        .blog-post:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.12);
        }

    .ttr-post-media {
        position: relative;
        overflow: hidden;
    }

    .news-image {
        transition: transform 0.4s ease;
    }

    .blog-post:hover .news-image {
        transform: scale(1.05);
    }

    /* Hiệu ứng overlay khi hover ảnh */
    .ttr-post-media::after {
        content: "Xem chi tiết";
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(46, 125, 50, 0.7); /* Lớp phủ màu xanh lá */
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }

    .blog-post:hover .ttr-post-media::after {
        opacity: 1;
    }

    .media-post {
        color: #556B2F; /* Màu olive */
    }

        .media-post i {
            color: #66BB6A;
        }

    .post-title a {
        color: #1B5E20; /* Xanh đậm */
        transition: color 0.3s ease;
    }

        .post-title a:hover {
            color: #4CAF50;
            text-decoration: none;
        }

    .post-excerpt {
        color: #555;
    }

    /* Nút Read More */
    .read-more-btn {
        font-weight: 600;
        border-color: #66BB6A;
        color: #388E3C;
    }

        .read-more-btn:hover {
            background-color: #388E3C;
            border-color: #388E3C;
            color: white;
        }

    /* Modal */
    .modal-header {
        background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
        color: white;
    }

    .modal-title {
        color: white;
    }

    .btn-close-white {
        filter: invert(1) grayscale(100%) brightness(200%);
    }

    /* Pagination */
    .pagination .page-link {
        color: #388E3C;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 5px;
        border-color: #C8E6C9;
        transition: all 0.3s ease;
    }

    .pagination .page-item.active .page-link {
        background-color: #4CAF50;
        color: white;
        border-color: #4CAF50;
    }

    .pagination .page-item:not(.active) .page-link:hover {
        background-color: #E8F5E9;
        border-color: #A5D6A7;
    }

    .pagination .page-item.disabled .page-link {
        color: #A5D6A7;
    }

     .page-banner {
            position: relative;
            height: 300px;
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            /* Lớp phủ màu xanh lá lên ảnh banner của bài viết */
            background: linear-gradient(135deg, rgba(85, 139, 47, 0.7), rgba(27, 94, 32, 0.8)), url('~/upload/green.jpg') center/cover;
        }

</style>

<div class="page-content">
    <div class="page-banner">
        <div class="container">
            <div class="page-banner-entry text-center">
                <h1 class="text-white">Tin Tức</h1>
            </div>
        </div>
    </div>

    <div class="breadcrumb-row">
        <div class="container">
            <ul class="breadcrumb-list">
                <li><a href="@Url.Action("Index", "Home")" class="breadcrumb-link">Trang chủ</a></li>
                <li class="active">Tin tức</li>
            </ul>
        </div>
    </div>

    <div class="content-block py-5">
        <div class="container">
            <div class="search-bx style-1 mb-5">
                <form method="get" action="@Url.Action("Index", "News")" role="search" class="search-form d-flex">
                    <input type="text" name="searchText" class="form-control search-input" placeholder="Nhập từ khóa tin tức..." value="@ViewBag.SearchText" />
                    <button type="submit" class="btn search-btn">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>

            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-6 col-md-12">
                            <div class="blog-post blog-md mb-5">
                                <div class="ttr-post-media rounded-top">
                                    @if (!string.IsNullOrEmpty(item.UrlImage))
                                    {
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@item.NewsId" class="d-block">
                                            <img src="@item.UrlImage" alt="@item.Title" class="img-fluid w-100 news-image" />
                                        </a>
                                    }
                                </div>

                                <div class="ttr-post-info p-4">
                                    <ul class="media-post list-inline text-muted mb-2 small">
                                        <li class="list-inline-item"><i class="fa fa-calendar"></i> @item.CreatedAt.ToString("dd/MM/yyyy")</li>
                                        <li class="list-inline-item ml-3"><i class="fa fa-user"></i> @item.User.TenNguoiDung</li>
                                    </ul>

                                    <h5 class="post-title mb-3">
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@item.NewsId" class="text-decoration-none">
                                            @item.Title
                                        </a>
                                    </h5>

                                    <p class="post-excerpt text-secondary">
                                        @(item.Content != null && item.Content.Length > 150 ? item.Content.Substring(0, 150) + "..." : item.Content)
                                    </p>

                                    <div class="d-flex justify-content-between align-items-center mt-4">
                                        <a asp-controller="News" asp-action="Details" asp-route-id="@item.NewsId" class="btn btn-outline-primary btn-sm read-more-btn">
                                            ĐỌC THÊM
                                        </a>
                                        <span class="text-muted small">
                                            <i class="fa fa-eye"></i> @item.ViewCount lượt xem
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="blogModal-@item.NewsId" tabindex="-1" aria-labelledby="modalLabel-@item.NewsId" aria-hidden="true">
                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                <div class="modal-content rounded-lg">
                                    <div class="modal-header">
                                        <h5 class="modal-title font-weight-bold" id="modalLabel-@item.NewsId">@item.Title</h5>
                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p><strong>Tác giả:</strong> @item.User.TenNguoiDung</p>
                                        <p><strong>Ngày đăng:</strong> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                        @if (!string.IsNullOrEmpty(item.UrlImage))
                                        {
                                            <img src="@item.UrlImage" alt="Image" class="img-fluid mb-3 rounded" />
                                        }
                                        <p class="text-justify">@item.Content</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center">
                        <p>Không tìm thấy tin tức nào phù hợp.</p>
                    </div>
                }
            </div>

            @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if ((int)ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = (int)ViewBag.CurrentPage - 1, searchText = ViewBag.SearchText })" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                        }
                        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = i, searchText = ViewBag.SearchText })">@i</a>
                            </li>
                        }
                        @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Index", new { page = (int)ViewBag.CurrentPage + 1, searchText = ViewBag.SearchText })" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>