@model List<SmartCookFinal.Models.MonAn>

@{
    ViewData["Title"] = "Quản lý món ăn";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Quản lý món ăn</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
            background-color: #f9f9f9;
        }

        h2 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .admin-meals-table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .admin-meals-table th, .admin-meals-table td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: left;
                vertical-align: middle;
            }

            .admin-meals-table th {
                background-color: #2c3e50;
                color: white;
            }

            .admin-meals-table td img {
                width: 80px;
                height: 60px;
                border-radius: 5px;
                object-fit: cover;
            }

        .action-button {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }

            .action-button:hover {
                background-color: #2980b9;
            }

        .delete-button {
            background-color: #e74c3c;
        }

            .delete-button:hover {
                background-color: #c0392b;
            }

        .new-button {
            background-color: #2ecc71;
        }

            .new-button:hover {
                background-color: #27ae60;
            }

        .back-button {
            background-color: #6c757d;
        }

            .back-button:hover {
                background-color: #5a6268;
            }

        .alert {
            padding: 10px 15px;
            margin-bottom: 15px;
            border-radius: 4px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .pagination {
            margin-top: 20px;
            text-align: center;
        }

            .pagination a, .pagination strong {
                margin: 0 5px;
                padding: 6px 12px;
                border-radius: 4px;
                text-decoration: none;
            }

            .pagination a {
                background-color: #eee;
                color: #333;
            }

                .pagination a:hover {
                    background-color: #ccc;
                }

            .pagination strong {
                background-color: #3498db;
                color: white;
            }

        .top-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            align-items: center;
        }

            .top-bar form {
                display: flex;
                gap: 10px;
            }

            .top-bar input[type="text"] {
                padding: 6px;
                border-radius: 4px;
                border: 1px solid #ccc;
            }

        .diet-labels {
            font-style: italic;
            color: #555;
        }
    </style>
</head>
<body>

    <div class="top-bar">
        <a href="@Url.Action("Dashboard", "Admin")" class="action-button back-button">🔙 Quay về</a>

        <form method="get" asp-action="Index">
            <input type="text" name="search" value="@ViewBag.CurrentSearch" placeholder="Tìm món ăn..." />
            <button type="submit" class="action-button">Tìm kiếm</button>
        </form>

        <a href="@Url.Action("Create", "ManageMeal")" class="action-button new-button">+ Thêm món mới</a>
    </div>

    <h2>Danh sách món ăn</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="admin-meals-table">
        <thead>
            <tr>
                <th>Hình ảnh</th>
                <th>Tên món</th>
                <th>Loại bữa ăn</th>
                <th>Thời gian nấu</th>
                <th>Calo</th>
                <th>Chế độ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meal in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(meal.UrlHinhAnh))
                        {
                            <img src="@meal.UrlHinhAnh" alt="Hình món ăn" />
                        }
                    </td>
                    <td>@meal.TenMon</td>
                    <td>@meal.LoaiBuaAn</td>
                    <td>@meal.ThoiGianNau phút</td>
                    <td>@meal.LuongCalo calo</td>
                    <td class="diet-labels">
                        @(meal.Chay == true ? "Chay, " : "")
                        @(meal.AnKeto == true ? "Keto, " : "")
                        @(meal.AnKhongGluten == true ? "Không Gluten" : "")
                    </td>
                    <td>
                        <div style="display: flex; gap: 8px;">
                            <a class="action-button" asp-action="Edit" asp-route-id="@meal.Id">Edit</a>
                            <form asp-action="Delete" asp-route-id="@meal.Id" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa món ăn này?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="action-button delete-button">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <a asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage - 1)"
                   asp-route-search="@ViewBag.CurrentSearch">« Trước</a>
            }

            @{
                int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <strong>@i</strong>
                }
                else
                {
                    <a asp-action="Index"
                       asp-route-page="@i"
                       asp-route-search="@ViewBag.CurrentSearch">@i</a>
                }
            }

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a asp-action="Index"
                   asp-route-page="@(ViewBag.CurrentPage + 1)"
                   asp-route-search="@ViewBag.CurrentSearch">Sau »</a>
            }
        </div>
    }


</body>
</html>
