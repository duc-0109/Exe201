@model List<SmartCookFinal.Models.NguoiDung>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý Người dùng";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string search = ViewBag.Search ?? "";
    bool isFirstPage = currentPage == 1;
    bool isLastPage = currentPage == totalPages;
}

<style>
    /* Container & typography */
    .user-manage-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

        .user-manage-header h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3748; /* dark gray */
        }

    /* Search & button */
    .search-form {
        display: flex;
        gap: 12px;
    }

        .search-form input[type="text"] {
            padding: 8px 14px;
            border: 1px solid #cbd5e0; /* gray-300 */
            border-radius: 8px;
            font-size: 0.9rem;
            outline: none;
            transition: border-color 0.3s ease;
        }

            .search-form input[type="text"]:focus {
                border-color: #4c51bf; /* indigo-600 */
                box-shadow: 0 0 5px rgba(76, 81, 191, 0.6);
            }

        .search-form button {
            background-color: #4c51bf;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .search-form button:hover {
                background-color: #434190;
            }

    /* Add user button */
    .btn-add-user {
        background-color: #38a169; /* green-500 */
        color: white;
        padding: 8px 14px;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 2px 6px rgb(56 161 105 / 0.4);
        transition: background-color 0.3s ease;
    }

        .btn-add-user:hover {
            background-color: #2f855a;
            box-shadow: 0 3px 8px rgb(47 133 90 / 0.7);
        }

    /* Table styling */
    .user-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border: 1px solid #cbd5e0;
        border-radius: 12px;
        overflow: hidden;
        font-size: 0.95rem;
        background-color: white;
        box-shadow: 0 1px 4px rgb(0 0 0 / 0.1);
    }

        .user-table thead {
            background: linear-gradient(90deg, #667eea, #764ba2);
            color: white;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.05em;
        }

        .user-table th,
        .user-table td {
            padding: 14px 18px;
            border-bottom: 1px solid #e2e8f0;
        }

        .user-table tbody tr:hover {
            background-color: #f7fafc;
        }

    /* Status badges */
    .badge-active {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 700;
        color: #276749; /* green-700 */
        background-color: #c6f6d5; /* green-100 */
        user-select: none;
    }

    .badge-inactive {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 700;
        color: #9b2c2c; /* red-700 */
        background-color: #fed7d7; /* red-100 */
        user-select: none;
    }

    /* Action buttons */
    .action-btn {
        font-size: 0.75rem;
        font-weight: 600;
        color: white;
        padding: 6px 10px;
        border-radius: 6px;
        text-decoration: none;
        box-shadow: 0 2px 5px rgb(0 0 0 / 0.2);
        transition: background-color 0.3s ease;
        user-select: none;
    }

        .action-btn.edit {
            background-color: #4299e1;
        }

            .action-btn.edit:hover {
                background-color: #2b6cb0;
            }

        .action-btn.delete {
            background-color: #f56565;
        }

            .action-btn.delete:hover {
                background-color: #c53030;
            }

    /* Pagination */
    .pagination {
        margin-top: 24px;
        display: flex;
        justify-content: center;
        gap: 8px;
        user-select: none;
    }

        .pagination a {
            padding: 8px 14px;
            border-radius: 9999px;
            border: 1px solid #cbd5e0;
            font-size: 0.85rem;
            font-weight: 600;
            color: #38a169;
            text-decoration: none;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 36px;
            user-select: none;
        }

            .pagination a:hover:not(.disabled) {
                background-color: #c6f6d5;
                border-color: #38a169;
                color: #22543d;
            }

            .pagination a[aria-current="page"] {
                background-color: #38a169;
                color: white;
                border-color: #38a169;
                cursor: default;
            }

            .pagination a.disabled,
            .pagination a.disabled:hover {
                color: #a0aec0;
                border-color: #cbd5e0;
                background-color: #edf2f7;
                pointer-events: none;
                cursor: default;
            }
</style>

<div>
    <div class="user-manage-header">
        <h2>📋 Quản lý Người dùng</h2>
        <div class="search-form">
            <form method="get">
                <input name="search" value="@search" type="text" placeholder="🔍 Tìm kiếm" />
                <button type="submit">Tìm kiếm</button>
            </form>
            <a asp-controller="Admin" asp-action="CreateUser" class="btn-add-user" title="Thêm người dùng">
                ➕ Thêm người dùng
            </a>
        </div>
    </div>
    <div style="margin-bottom: 20px;">
        <a asp-controller="Admin" asp-action="Dashboard" class="btn-add-user" style="background-color:#3182ce;">
            🔙 Quay về bảng kiểm soát
        </a>
    </div>
    <div style="overflow-x:auto;">
        <table class="user-table" role="grid" aria-label="Danh sách người dùng">
            <thead>
                <tr>
                    <th>👤 Tên người dùng</th>
                    <th>📧 Email</th>
                    <th>✅ Kích hoạt</th>
                    <th>🔐 Quyền</th>
                    <th style="text-align:center;">⚙️ Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.TenNguoiDung</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.IsActive)
                            {
                                <span class="badge-active">Đã kích hoạt</span>
                            }
                            else
                            {
                                <span class="badge-inactive">Chưa kích hoạt</span>
                            }
                        </td>
                        <td>@user.Role</td>
                        <td style="text-align:center;">
                            <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id" class="action-btn edit" title="Sửa người dùng">
                                ✏️ Sửa
                            </a>
                            <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" onclick="return confirm('Bạn có chắc chắn muốn xóa người dùng này?');" class="action-btn delete" title="Xóa người dùng">
                                🗑️ Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Pagination" class="pagination" role="navigation">
        <a asp-action="UserManage" asp-route-page="@(isFirstPage ? 1 : currentPage - 1)" asp-route-search="@search"
           class="@(isFirstPage ? "disabled" : "")" aria-disabled="@(isFirstPage.ToString().ToLower())" tabindex="@(isFirstPage ? "-1" : "0")">
            &laquo; Trước
        </a>

        @for (int i = 1; i <= totalPages; i++)
        {
            bool isCurrent = i == currentPage;
            <a asp-action="UserManage" asp-route-page="@i" asp-route-search="@search"
               class="@(isCurrent ? "current-page" : "")"
               aria-current="@(isCurrent ? "page" : null)">
                @i
            </a>
        }

        <a asp-action="UserManage" asp-route-page="@(isLastPage? totalPages : currentPage + 1)" asp-route-search="@search"
           class="@(isLastPage ? "disabled" : "")" aria-disabled="@(isLastPage.ToString().ToLower())" tabindex="@(isLastPage ? "-1" : "0")">
            Sau &raquo;
        </a>
    </nav>
</div>
