@{
    Layout = null;
    ViewBag.Title = "Bảng Điều Khiển Quản Trị";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
            color: #2c3e50;
        }

        .sidebar {
            background-color: #f1f1f1;
            min-height: 100vh;
            padding-top: 2rem;
            box-shadow: 2px 0 10px rgba(0,0,0,0.05);
        }

            .sidebar h4 {
                font-weight: bold;
                color: #2c3e50;
                text-align: center;
                margin-bottom: 2rem;
                text-transform: uppercase;
                font-size: 1.2rem;
            }

            .sidebar .nav-link {
                color: #2c3e50;
                font-weight: 500;
                padding: 12px 20px;
                border-radius: 8px;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #e0e0e0;
                    transform: translateX(5px);
                }

                .sidebar .nav-link i {
                    margin-right: 8px;
                }

        .sidebar-footer {
            padding: 1rem;
            font-size: 0.85rem;
            text-align: center;
            color: #7f8c8d;
        }

        main {
            padding: 3rem 2rem;
        }

        h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #34495e;
            margin-bottom: 2rem;
            text-align: center;
            text-transform: uppercase;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 6px 16px rgba(0,0,0,0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 12px 24px rgba(0,0,0,0.1);
            }

        .card-title {
            font-size: 1.3rem;
            font-weight: bold;
            color: #5c5c8a;
        }

        .card-text {
            font-size: 1rem;
            color: #555;
        }

        .btn-view {
            font-weight: 600;
            padding: 0.4rem 1.2rem;
            border-radius: 25px;
        }

        .alert-info {
            background-color: #ecf0f1;
            color: #2c3e50;
            font-weight: 600;
            border-radius: 12px;
        }

        .pagination .page-link {
            border-radius: 25px;
            color: #2c3e50;
        }

            .pagination .page-link:hover,
            .pagination .page-item.active .page-link {
                background-color: #5c5c8a;
                color: white;
                border-color: transparent;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 sidebar">
                <h4>Bảng Quản Trị</h4>
                <ul class="nav flex-column px-3">
                    <li class="nav-item"><a href="/Admin/UserManage" class="nav-link"><i class="bi bi-people-fill"></i> Người Dùng</a></li>
                    <li class="nav-item"><a href="/Post/Index" class="nav-link"><i class="bi bi-journal-text"></i> Blog</a></li>
                    <li class="nav-item"><a href="/ManageNews/Index" class="nav-link"><i class="bi bi-newspaper"></i> Tin Tức</a></li>
                    <li class="nav-item"><a href="/ManageMeal/Index" class="nav-link"><i class="bi bi-receipt-cutoff"></i> Món Ăn</a></li>
                    <li class="nav-item"><a href="/Admin/ContactList" class="nav-link"><i class="bi bi-chat-left-text-fill"></i> Liên Hệ</a></li>
                </ul>
                <div class="sidebar-footer">© 2025 An Thực</div>
            </nav>

            <!-- Main -->
            <main class="col-md-9 col-lg-10">
                <div class="d-flex justify-content-end align-items-center mb-3">
                    <span class="me-3 fw-semibold text-dark">
                        👤 @Context.Session.GetString("UserName")
                    </span>
                    <a asp-controller="Admin" asp-action="Logout" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>

                </div>

                <h2>Chào Mừng Đến Trang Quản Trị</h2>

                <div class="row g-4">
                    <div class="col-sm-6 col-lg-4">
                        <div class="card p-3">
                            <h5 class="card-title"><i class="bi bi-people-fill"></i> Người Dùng</h5>
                            <p class="card-text">Quản lý người dùng hệ thống.</p>
                            <a href="/Admin/UserManage" class="btn btn-outline-primary btn-view">Xem <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card p-3">
                            <h5 class="card-title"><i class="bi bi-journal-text"></i> Blog</h5>
                            <p class="card-text">Tạo và chỉnh sửa bài viết.</p>
                            <a href="/Post/Index" class="btn btn-outline-primary btn-view">Xem <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card p-3">
                            <h5 class="card-title"><i class="bi bi-newspaper"></i> Tin Tức</h5>
                            <p class="card-text">Cập nhật tin mới.</p>
                            <a href="/ManageNews/Index" class="btn btn-outline-primary btn-view">Xem <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card p-3">
                            <h5 class="card-title"><i class="bi bi-receipt-cutoff"></i> Món Ăn</h5>
                            <p class="card-text">Quản lý công thức món ăn.</p>
                            <a href="/ManageMeal/Index" class="btn btn-outline-primary btn-view">Xem <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="card p-3">
                            <h5 class="card-title"><i class="bi bi-chat-left-text-fill"></i> Liên Hệ</h5>
                            <p class="card-text">Xử lý yêu cầu từ người dùng.</p>
                            <a href="/Admin/ContactList" class="btn btn-outline-primary btn-view">Xem <i class="bi bi-arrow-right"></i></a>
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mt-5 d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-2"></i>
                    Hãy bảo mật và cập nhật thông tin thường xuyên.
                </div>
            </main>
        </div>
    </div>
</body>
</html>
