@model SmartCookFinal.Models.NguoiDung
@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 mb-5">
    <h2 class="mb-4 text-center">Thông Tin Cá Nhân</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-action="Profile" method="post" class="card shadow p-4 mx-auto" style="max-width: 600px;">
        @Html.AntiForgeryToken()

        <!-- Hidden field for ID - QUAN TRỌNG -->
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="TenNguoiDung" class="form-label">Tên người dùng</label>
            <input asp-for="TenNguoiDung" class="form-control" />
            <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="Tuoi" class="form-label">Tuổi</label>
            <input asp-for="Tuoi" type="number" class="form-control" min="1" max="120" />
            <span asp-validation-for="Tuoi" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ChieuCao" class="form-label">Chiều cao (cm)</label>
            <input asp-for="ChieuCao" type="number" step="0.1" class="form-control" min="50" max="250" />
            <span asp-validation-for="ChieuCao" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CanNang" class="form-label">Cân nặng (kg)</label>
            <input asp-for="CanNang" type="number" step="0.1" class="form-control" min="20" max="300" />
            <span asp-validation-for="CanNang" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="GioiTinh" class="form-label">Giới tính</label>
            <select asp-for="GioiTinh" class="form-select">
                <option value="">-- Chọn --</option>
                <option value="Nam">Nam</option>
                <option value="Nữ">Nữ</option>
                <option value="Khác">Khác</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Tài khoản xác thực</label>
            <input type="text" class="form-control" value="@(Model.IsActive ? "Đã xác thực" : "Chưa xác thực")" readonly
                   style="color:@(Model.IsActive ? "green" : "red"); font-weight: bold;" />
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}