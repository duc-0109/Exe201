@using Azure.Core
@model IEnumerable<SmartCookFinal.Models.Blog>

<style>
	.blog-post {
		background: #fff;
		border-radius: 10px;
		box-shadow: 0 10px 20px rgba(0,0,0,0.1);
		overflow: hidden;
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		margin-bottom: 30px;
		animation: fadeInUp 0.8s ease forwards;
	}

		.blog-post:hover {
			transform: translateY(-5px);
			box-shadow: 0 20px 40px rgba(0,0,0,0.15);
		}

	.blog-image {
		width: 100%;
		height: auto;
		border-radius: 10px 10px 0 0;
		object-fit: cover;
		transition: transform 0.5s ease;
	}

	.blog-post:hover .blog-image {
		transform: scale(1.05);
	}

	.btn-link {
		color: #007bff;
		text-decoration: none;
		font-weight: bold;
		position: relative;
		transition: all 0.3s ease;
	}

		.btn-link::after {
			content: " →";
			position: absolute;
			opacity: 0;
			right: -20px;
			transition: all 0.3s ease;
		}

		.btn-link:hover::after {
			opacity: 1;
			right: 0;
		}

		.btn-link:hover {
			color: #0056b3;
			text-decoration: underline;
		}

	.modal-content {
		border-radius: 15px;
		box-shadow: 0 15px 30px rgba(0,0,0,0.2);
		animation: fadeIn 0.4s ease;
	}

	.modal-title {
		font-weight: bold;
		font-size: 1.5rem;
		color: #333;
	}

	.pagination > li > a,
	.pagination > li > span {
		border: none;
		color: #555;
		background-color: #f5f5f5;
		margin: 0 5px;
		padding: 10px 15px;
		border-radius: 50px;
		transition: background-color 0.3s, color 0.3s;
	}

	.pagination > li.active > a {
		background-color: #007bff;
		color: #fff;
	}

	.pagination > li > a:hover {
		background-color: #007bff;
		color: #fff;
	}

	/* Hiệu ứng xuất hiện */
	@@keyframes fadeInUp {
		0% {
			opacity: 0;
			transform: translateY(20px);
		}

		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@@keyframes fadeIn {
		from {
			opacity: 0;
		}

		to {
			opacity: 1;
		}
	}

	.ttr-post-media {
		position: relative;
	}

		.ttr-post-media::after {
			content: "";
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: linear-gradient(to bottom, rgba(0,0,0,0) 40%, rgba(0,0,0,0.6) 100%);
			border-radius: 10px 10px 0 0;
			pointer-events: none;
		}

	.section-area.section-sp1 {
		padding-top: 40px;
		padding-bottom: 60px;
	}
</style>


<div class="page-content bg-white">
	<!-- inner page banner -->
	<div class="page-banner ovbl-dark" style="background-image:url('@Url.Content("~/assets/images/banner/banner3.jpg")');">
		<div class="container">
			<div class="page-banner-entry">
				<h1 class="text-white">Blog List</h1>
			</div>
		</div>
	</div>

	<!-- Breadcrumb row -->
	<div class="breadcrumb-row">
		<div class="container">
			<ul class="list-inline">
				<li><a href="#">Home</a></li>
				<li><a asp-controller="Blog" asp-action="MyBlog">My Blog</a></li>
			</ul>
		</div>
	</div>

	<!-- Content -->
	<div class="content-block">
		<div class="widget">
			<div class="search-bx style-1">
				<form method="get" action="@Url.Action("Index", "Blog")" role="search">
					<div class="input-group">
						<input type="text" name="searchText" class="form-control" placeholder="Enter your keywords..." value="@ViewBag.SearchText" />
						<span class="input-group-btn">
							<button type="submit" class="fa fa-search text-primary"></button>
						</span>
					</div>
				</form>
			</div>
		</div>

		<div class="section-area section-sp1">
			<div class="container">
				<div class="row">
					<!-- Blog list -->
					@foreach (var item in Model)
					{
						<div class="col-lg-8">
							<div class="blog-post blog-md clearfix">
								<div class="ttr-post-media">
									@if (!string.IsNullOrEmpty(item.UrlImage))
									{
										<a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
											<img src="@item.UrlImage" alt="@item.Title" class="blog-image" />
										</a>
									}
								</div>
								<div class="ttr-post-info">
									<ul class="media-post">
										<li><i class="fa fa-calendar"></i> @item.CreatedAt.ToString("dd/MM/yyyy")</li>
										<li><i class="fa fa-user"></i> @item.User.TenNguoiDung</li>
									</ul>
									<h5 class="post-title">
										<a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId" style="text-decoration: none; color: inherit;">
											@item.Title
										</a>
									</h5>
									<p>@(item.Content.Length > 200 ? item.Content.Substring(0, 200) + "..." : item.Content)</p>
									<div class="post-extra">
										<button type="button" class="btn btn-link" data-toggle="modal" data-target="#blogModal-@item.BlogId">
											READ MORE
										</button>
									</div>
								</div>
							</div>

							<!-- Modal -->
							<div class="modal fade" id="blogModal-@item.BlogId" tabindex="-1" role="dialog" aria-labelledby="modalLabel-@item.BlogId" aria-hidden="true">
								<div class="modal-dialog modal-lg" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="modalLabel-@item.BlogId">@item.Title</h5>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close">
												<span aria-hidden="true">&times;</span>
											</button>
										</div>
										<div class="modal-body">
											<p><strong>Tác giả:</strong> @item.User.TenNguoiDung</p>
											<p><strong>Ngày đăng:</strong> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
											@if (!string.IsNullOrEmpty(item.UrlImage))
											{
												<img src="@item.UrlImage" alt="Image" class="img-fluid mb-3" />
											}
											<p>@item.Content</p>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					}

					<!-- Pagination -->
					@if (ViewBag.TotalPages > 1)
					{
						<div class="pagination-bx rounded-sm gray clearfix">
							<ul class="pagination">
								@if (ViewBag.CurrentPage > 1)
								{
									<li class="previous">
										<a href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, searchText = ViewBag.SearchText })">
											<i class="ti-arrow-left"></i> Prev
										</a>
									</li>
								}
								@for (int i = 1; i <= ViewBag.TotalPages; i++)
								{
									<li class="@(i == ViewBag.CurrentPage ? "active" : "")">
										<a href="@Url.Action("Index", new { page = i, searchText = ViewBag.SearchText })">@i</a>
									</li>
								}
								@if (ViewBag.CurrentPage < ViewBag.TotalPages)
								{
									<li class="next">
										<a href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, searchText = ViewBag.SearchText })">
											Next <i class="ti-arrow-right"></i>
										</a>
									</li>
								}
							</ul>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
