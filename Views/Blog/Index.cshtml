@using Azure.Core
@model IEnumerable<SmartCookFinal.Models.Blog>

<style>
    /*
            =========================================================================================
            STYLE V.4 - SỬA LỖI MÀU BANNER
            =========================================================================================
        */

    /* Nền chính của trang, rất nhạt để làm nổi bật nội dung */
    .content-block, .page-content {
        background-color: #F0F9F0; /* Màu nền xanh siêu nhạt */
    }

    .blog-post {
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.07);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        margin-bottom: 40px;
        animation: fadeInUp 0.8s ease forwards;
        border: 1px solid #E8F5E9;
    }

        .blog-post:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
        }

    .blog-image {
        width: 100%;
        height: 280px;
        border-radius: 15px 15px 0 0;
        object-fit: cover;
        transition: all 0.5s ease;
    }

    .ttr-post-info {
        padding: 30px;
        background: #ffffff;
    }

    .media-post {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
        list-style: none;
        padding: 0;
    }

        .media-post li {
            display: flex;
            align-items: center;
            color: #556B2F; /* Màu olive đậm cho chữ phụ */
            font-size: 14px;
            font-weight: 500;
        }

        /* Icon màu xanh lá cây */
        .media-post i {
            margin-right: 8px;
            color: #66BB6A; /* Màu xanh lá cây chính */
            font-size: 16px;
        }

    .post-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        line-height: 1.4;
    }

        /* Tiêu đề màu xanh lá cây đậm */
        .post-title a {
            color: #1B5E20; /* Xanh lá rất đậm */
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .post-title a:hover {
                color: #4CAF50; /* Xanh lá sáng hơn khi hover */
            }

    .blog-excerpt {
        color: #556B2F;
        line-height: 1.7;
        margin-bottom: 25px;
        font-size: 15px;
    }

    /* Nút bấm màu xanh lá */
    .btn-link, .modal-footer .btn-primary {
        background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
        color: white;
        text-decoration: none;
        font-weight: 600;
        padding: 12px 30px;
        border-radius: 50px;
        transition: all 0.3s ease;
        display: inline-block;
        overflow: hidden;
        border: none;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 13px;
    }

        .btn-link:hover, .modal-footer .btn-primary:hover {
            background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(67, 160, 71, 0.3);
        }

    /* Modal Styles */
    .modal-content {
        border-radius: 20px;
        border: none;
        overflow: hidden;
    }

    /* Header modal màu xanh lá */
    .modal-header {
        background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
        color: white;
        border: none;
        padding: 25px 30px;
    }

    .modal-title {
        font-weight: 700;
        font-size: 1.6rem;
    }

    .modal-body {
        padding: 30px;
        background: #FAFFF9;
        line-height: 1.8;
    }

    .modal-footer {
        background: #f8f9fa;
        border: none;
        padding: 20px 30px;
    }

    .btn-secondary {
        background: #E0E0E0;
        border: none;
        border-radius: 50px;
        padding: 10px 25px;
        font-weight: 600;
        color: #333;
    }

    /* Pagination */
    .pagination-bx {
        margin-top: 50px;
        display: flex;
        justify-content: center;
    }

    .pagination {
        display: flex;
        gap: 10px;
        list-style: none;
        padding: 0;
    }

        .pagination > li > a,
        .pagination > li > span {
            border: none;
            color: #388E3C;
            background: white;
            padding: 12px 18px;
            border-radius: 50px;
            transition: all 0.3s ease;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        }

            .pagination > li.active > a,
            .pagination > li > a:hover {
                background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
                color: #fff;
                box-shadow: 0 8px 25px rgba(67, 160, 71, 0.4);
                transform: translateY(-2px);
            }

    /* ** FIX HERE ** BANNER ĐƯỢC CẬP NHẬT LẠI */
    .page-banner.ovbl-dark {
        background: linear-gradient(135deg, rgba(85, 139, 47, 0.85), rgba(27, 94, 32, 0.9));
        padding: 120px 0 80px;
    }

    .page-banner {
        position: relative;
        height: 300px;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        /* Sử dụng màu từ CSS variables đã định nghĩa */
        background: linear-gradient(135deg, rgba(34, 197, 94, 0.8), rgba(22, 163, 74, 0.9)), url('~/upload/green.jpg') center/cover;
    }

    .page-banner h1 {
        font-size: 3.5rem;
        font-weight: 800;
        text-shadow: 1px 1px 10px rgba(0,0,0,0.2);
    }

    /* Thanh tìm kiếm */
    .search-bx .input-group {
        box-shadow: 0 10px 40px rgba(0,0,0,0.07);
        border-radius: 50px;
        overflow: hidden;
        background: white;
        transition: all 0.3s ease;
    }

        .search-bx .input-group:focus-within {
            box-shadow: 0 15px 50px rgba(67, 160, 71, 0.2);
            transform: translateY(-2px);
        }

    .search-bx .form-control {
        border: none;
        padding: 20px 25px;
        font-size: 16px;
        background: transparent;
    }

    /* Nút tìm kiếm */
    .search-bx .input-group-btn button {
        background: linear-gradient(135deg, #66BB6A 0%, #43A047 100%);
        border: none;
        padding: 20px 30px;
        color: white;
        transition: all 0.3s ease;
    }

        .search-bx .input-group-btn button:hover {
            background: linear-gradient(135deg, #4CAF50 0%, #388E3C 100%);
        }

    /* ** FIX HERE ** THANH BREADCRUMB ĐƯỢC CẬP NHẬT */
    .breadcrumb-row {
        background: #C8E6C9; /* Màu xanh lá từ ảnh bạn cung cấp */
        padding: 20px 0;
        border-bottom: 1px solid #A5D6A7;
    }

        .breadcrumb-row a {
            color: #1B5E20; /* Màu xanh đậm cho chữ */
            text-decoration: none;
            font-weight: 600;
        }

            .breadcrumb-row a:hover {
                color: #388E3C;
            }

        .breadcrumb-row li, .breadcrumb-row li:not(:last-child)::after {
            color: #2E7D32;
        }

    .widget {
        padding: 40px 0;
        background: transparent;
    }

    .alert.alert-info {
        background-color: #E6F3E6;
        border-color: #C8E6C9;
        color: #1B5E20;
    }

        .alert.alert-info .text-primary {
            color: #4CAF50 !important;
        }

    /* Animation */
    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(40px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="page-content">
    <div class="page-banner">
        <div class="container">
            <div class="page-banner-entry text-center">
                <h1 class="text-white">Danh Sách Bài Viết</h1>
            </div>
        </div>
    </div>

    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="@Url.Action("Index", "Home") " style="margin-right:10px;"><i class="fa fa-home me-2"></i>Trang chủ</a></li>
                <li><a asp-controller="Blog" asp-action="MyBlog">My Blog</a></li>
            </ul>
        </div>
    </div>

    <div class="content-block">
        <div class="widget">
            <div class="container">
                <div class="search-bx style-1">
                    <form method="get" asp-controller="Blog" asp-action="Index" role="search">
                        <div class="input-group">
                            <input type="text" name="searchText" class="form-control"
                                   placeholder="Nhập từ khóa tìm kiếm..."
                                   value="@ViewBag.SearchText" />
                            <span class="input-group-btn">
                                <button type="submit" class="fa fa-search text-primary"></button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="section-area section-sp1 pt-0">
            <div class="container">
                <div class="row justify-content-center">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-10 col-xl-8">
                                <div class="blog-post blog-md clearfix">
                                    <div class="ttr-post-media">
                                        <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                            <img src="@item.UrlImage" alt="@item.Title" class="blog-image" />
                                        </a>
                                    </div>
                                    <div class="ttr-post-info">
                                        <ul class="media-post">
                                            <li><i class="fa fa-calendar"></i> @item.CreatedAt.ToString("dd/MM/yyyy")</li>
                                            <li><i class="fa fa-user"></i> @(item.User?.TenNguoiDung ?? "Admin")</li>
                                        </ul>
                                        <h5 class="post-title">
                                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId">
                                                @item.Title
                                            </a>
                                        </h5>
                                        <div class="blog-excerpt">
                                            @(item.Content != null && item.Content.Length > 200 ?
                                                Html.Raw(item.Content.Substring(0, 200) + "...") :
                                                Html.Raw(item.Content ?? ""))
                                        </div>
                                        <div class="post-extra d-flex align-items-center">
                                            <button type="button" class="btn-link me-3" data-bs-toggle="modal" data-bs-target="#blogModal-@item.BlogId">
                                                ĐỌC THÊM
                                            </button>
                                            <div class="comment-count text-muted" style="display: inline-block; margin-right: 20px;">
                                                @(item.Comments?.Count ?? 0) Comments
                                            </div>
                                            <div class="view-count text-muted" style="display: inline-block;">
                                                <i class="fa fa-eye"></i> @item.ViewCount lượt xem
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="modal fade" id="blogModal-@item.BlogId" tabindex="-1" aria-labelledby="modalLabel-@item.BlogId" aria-hidden="true">
                                    <div class="modal-dialog modal-lg modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="modalLabel-@item.BlogId">@item.Title</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-4">
                                                    <p><strong><i class="fa fa-user me-2"></i>Tác giả:</strong> @(item.User?.TenNguoiDung ?? "Admin")</p>
                                                    <p><strong><i class="fa fa-calendar me-2"></i>Ngày đăng:</strong> @item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                                                </div>
                                                @if (!string.IsNullOrEmpty(item.UrlImage))
                                                {
                                                    <img src="@item.UrlImage" alt="@item.Title" class="img-fluid mb-4 rounded" />
                                                }
                                                <div class="content-text">
                                                    @Html.Raw(item.Content ?? "")
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="fa fa-times me-2"></i>Đóng
                                                </button>
                                                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-primary">
                                                    <i class="fa fa-external-link me-2"></i>Xem chi tiết
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <div class="alert alert-info" style="border-radius: 15px; padding: 30px;">
                                <i class="fa fa-info-circle fa-3x mb-3 text-primary"></i>
                                <h4>Không tìm thấy bài viết nào</h4>
                                <p class="mb-0">Vui lòng thử lại với từ khóa khác hoặc quay lại trang chủ.</p>
                            </div>
                        </div>
                    }

                    @if (ViewBag.TotalPages != null && (int)ViewBag.TotalPages > 1)
                    {
                        <div class="col-12">
                            <div class="pagination-bx rounded-sm gray clearfix">
                                <ul class="pagination">
                                    @if ((int)ViewBag.CurrentPage > 1)
                                    {
                                        <li class="previous">
                                            <a href="@Url.Action("Index", new { page = (int)ViewBag.CurrentPage - 1, searchText = ViewBag.SearchText })">
                                                Trước
                                            </a>
                                        </li>
                                    }
                                    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
                                    {
                                        <li class="@(i == (int)ViewBag.CurrentPage ? "active" : "")">
                                            <a href="@Url.Action("Index", new { page = i, searchText = ViewBag.SearchText })">@i</a>
                                        </li>
                                    }
                                    @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
                                    {
                                        <li class="next">
                                            <a href="@Url.Action("Index", new { page = (int)ViewBag.CurrentPage + 1, searchText = ViewBag.SearchText })">
                                                Sau
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

<script>
    // Enhanced JavaScript for better UX
    document.addEventListener('DOMContentLoaded', function() {
        // Animate blog posts on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver(function(entries) {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationDelay = '0s';
                    entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                }
            });
        }, observerOptions);

        // Observe all blog posts
        document.querySelectorAll('.blog-post').forEach(post => {
            observer.observe(post);
        });

        // Enhanced modal functionality
        document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
            button.addEventListener('click', function() {
                const modal = document.querySelector(this.getAttribute('data-bs-target'));
                if (modal) {
                    modal.classList.add('show');
                }
            });
        });

        // Smooth scroll for pagination
        document.querySelectorAll('.pagination a').forEach(link => {
            link.addEventListener('click', function(e) {
                // Let the default behavior happen, but add smooth scroll to top
                setTimeout(() => {
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                }, 100);
            });
        });

        // Enhanced search functionality
        const searchInput = document.querySelector('input[name="searchText"]');
        if (searchInput) {
            let searchTimeout;
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    // Add loading state or preview functionality here if needed
                }, 300);
            });
        }
    });

    // Add some interactive effects
    document.querySelectorAll('.blog-post').forEach(post => {
        post.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-10px) scale(1.02)';
        });

        post.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
        });
    });
</script>